    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
Select_type st = new Select_type();
st.setVisible(true);
    this.setVisible(false);
    //Use of a HashMap and two ArrayList so that we can search quickly. All the data is tranferred into
    //HashMap on entry.
    try {
            Connection con = (Connection)DriverManager.getConnection("jdbc:mysql://localhost:3306/comp","shibli","shibli");
            Statement stm = (Statement)con.createStatement();
            ResultSet rs = stm.executeQuery("Select * from cmp;");
            int h =1;
            while(rs.next()==true){
            List<String> ls1 = new ArrayList<>();
            ls1.add(rs.getString("name"));
            ls1.add(rs.getString("age"));
            ls1.add(rs.getString("occup"));
            ls1.add(rs.getString("pnum"));
            ls1.add(rs.getString("categ"));
            ls1.add(rs.getString("detail"));
            ls1.add(rs.getString("id"));
            ls1.add(rs.getString("status"));
            ls1.add(rs.getString("credit"));
            ls1.add(rs.getString("FeePaid"));
            map.put(rs.getString("id"), ls1);
            //System.out.println(ls1);
            h++;
            }
            //System.out.println(map);
        } catch (SQLException ex) {
            Logger.getLogger(New_cust.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_jButton1ActionPerformed

