    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed
        Officer_log ol = new Officer_log();
        ol.setVisible(true);
        this.setVisible(false);
        try {
            Connection con = (Connection)DriverManager.getConnection("jdbc:mysql://localhost:3306/comp","shibli","shibli");
            Statement stm = (Statement)con.createStatement();
            ResultSet rs = stm.executeQuery("Select * from cmp;");
            int kl=0;
            while(rs.next()==true){
            List<String> ls4 = new ArrayList<>();
            ls4.add(rs.getString("name"));
            ls4.add(rs.getString("age"));
            ls4.add(rs.getString("occup"));
            ls4.add(rs.getString("pnum"));
            ls4.add(rs.getString("categ"));
            ls4.add(rs.getString("detail"));
            ls4.add(rs.getString("id"));
            ls4.add(rs.getString("status"));
            ls4.add(rs.getString("credit"));
            ls4.add(rs.getString("FeePaid"));
            //map1.put(rs.getString("id"),ls1);
            map.put(rs.getString("id"), ls4);
            }
            //JOptionPane.showMessageDialog(null,"");
        } catch (SQLException ex) {
            Logger.getLogger(New_cust.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_jButton3ActionPerformed

